# ============================================
# .env.local - Add these to your environment
# ============================================

# Your existing Clerk keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/program
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/pricing

# App URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# STRIPE CONFIGURATION
# ============================================

# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Get this from https://dashboard.stripe.com/webhooks
# For local development, use Stripe CLI: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================
# STRIPE PRICE IDS
# ============================================
# Create these in your Stripe Dashboard or run the setup script below
# Dashboard: https://dashboard.stripe.com/products

# £1 one-time payment for 14-day trial
STRIPE_TRIAL_PRICE_ID=price_xxxxx

# £4.99/month recurring subscription
STRIPE_MONTHLY_PRICE_ID=price_xxxxx

# £50/year recurring subscription
STRIPE_YEARLY_PRICE_ID=price_xxxxx

# ============================================
# DATABASE (your existing Prisma setup)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/reselltracker"
